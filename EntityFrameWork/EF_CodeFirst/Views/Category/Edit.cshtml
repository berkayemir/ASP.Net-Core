@model EF_CodeFirst.Models.Entities.Category

@{
    ViewData["Title"] = "Edit";
}


<h1 class="display-3">Category Edit</h1>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group d-flex flex-column">
                <label class="control-label">Category ID</label>
                <label class="control-label">@Model.CategoryId</label><br>
                <input type="text" asp-for="CategoryId" class="d-none">
                <label class="control-label">Category Name</label>
                <input class="form-control" type="text" asp-for="CategoryName">
                <label class="control-label">Category Description</label>
                <input class="form-control" type="text" asp-for="CategoryDescription">
                <label class="control-label">Is Deleted</label>
                <select value="@Model.IsDeleted" asp-for="IsDeleted" class="form-control">
                    <option value="True" >True</option>
                    <option value="False">False</option>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>