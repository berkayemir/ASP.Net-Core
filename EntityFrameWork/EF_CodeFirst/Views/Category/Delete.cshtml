@model EF_CodeFirst.Models.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-3">Delete Category</h1>

<div>
    <h4>Category</h4>
    <h5>Category ID: </h5>
    <p>@Model.CategoryId</p>
    <h5>Category Name:</h5>
    <p>@Model.CategoryName</p>
    <h5>Category Description:</h5>
    <p>@Model.CategoryDescription</p>
</div>
<div class="d-flex">
 <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId">
        <input type="submit" value="Delete Category" class="btn btn-sm btn-danger">

    </form> 
    <form asp-action="DeleteCompletely" class="ml-4">
        <input type="hidden" asp-for="CategoryId">
        <input type="hidden" asp-for="CategoryName">
        <input type="hidden" asp-for="CategoryDescription">

        <input type="submit" value="Delete COMPLETELY!" class="btn btn-sm btn-danger">
    </form>
</div>
<a asp-action="Index">Back to Category Page</a>