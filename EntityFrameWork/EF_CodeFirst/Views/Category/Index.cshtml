@model List<EF_CodeFirst.Models.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<a asp-action="Create">Create New Category</a>

<table class="table table-striped table-hover w-100">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Is Deleted</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
                <td>@category.IsDeleted</td>


                <td>
                    <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@category.CategoryId">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>