@model EF_CodeFirst.Models.Entities.Category

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-3">New Category</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Category Name</label>
                <input type="text" asp-for="CategoryName" class="form-control">
                <label class="control-label">Category Description</label>
                <input type="text" asp-for="CategoryDescription" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success">
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to Category Page</a>
</div>