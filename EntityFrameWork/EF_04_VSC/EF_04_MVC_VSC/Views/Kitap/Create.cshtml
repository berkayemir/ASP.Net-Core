@model EF_04_MVC_VSC.Models.Kitaplar


@{
    ViewData["Title"] = "Create";
}


<h1 class="display-3">Yeni Kitap </h1>
<hr>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                 <label asp-for="Isbn" class="control-label">Isbn</label>
                <input type="text"  class="form-control " asp-for="Isbn">
                <label asp-for="Ad" class="control-label">Kitap İsmi</label>
                <input type="text" class="form-control" asp-for="Ad">
                <label asp-for="SayfaSayisi" class="control-label">Sayfa Sayisi</label>
                <input type="text" class="form-control" asp-for="SayfaSayisi">
                <label asp-for="Stok" class="control-label">Stok</label>
                <input type="text" class="form-control" asp-for="Stok">
                <div>
                    <label asp-for="TurId" class="control-label">Tür</label>
                    <select asp-for="TurId" class="form-select form-control" asp-items="ViewBag.Tur"></select>
                </div>
                <div>
                    <label asp-for="YazarId" class="control-label">Yazar</label>
                    <select asp-for="YazarId" class="form-select form-control" asp-items="ViewBag.Yazar"></select>
                </div>
                <div>
                    <label asp-for="YayinEviId" class="control-label">Yayın Evi</label>
                    <select asp-for="YayinEviId" class="form-select form-control" asp-items="ViewBag.YayinEvi"></select>
                </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>